programa
{
	
	funcao inicio()
	{
		real lado1, lado2, lado3
		escreva("Diga o valor do 1º lado: ")
		leia(lado1)
		
		escreva("Diga o valor do 2º lado: ")
		leia(lado2)
		
		escreva("Diga o valor do 3º lado: ")
		leia(lado3)
		
		se(lado1 + lado2 > lado3 e lado1 + lado3 > lado2 e lado2 + lado3 > lado1){}						
		
		se(lado1 == lado2 e lado1 == lado3){
		escreva("Os lados formam um triangulo equilatero!")
		
		} se (lado1 == lado2 ou lado1 == lado3 ou lado2 == lado3){ 
           escreva("Os lados formam um triângulo isósceles.")
		
		}senao se(lado2 + lado3 > lado1){
          escreva("Os lados formam um triângulo escaleno.")		
		
		}
		senao{
			escreva("Os lados não formam nenhum triangulo. ")			
		}		
	}	  	
}
